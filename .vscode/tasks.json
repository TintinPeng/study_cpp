{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				// "-include",
				// "${workspaceFolder}/inc/tintin.hpp",
				"-g",
				"${file}",
				"-I",
				"${workspaceFolder}/inc",
				"-o",
				"${workspaceFolder}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
		}
	]
}
