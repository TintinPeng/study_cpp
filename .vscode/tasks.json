{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                // "-ggdb",
                // "`",
                // "pkg-config",
                // "--cflags",
                // "--libs",
                // "opencv4",
                // "`",
                "-o",
                // "${fileDirname}/bin/${fileBasenameNoExtension}"
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        }
    ]
}
